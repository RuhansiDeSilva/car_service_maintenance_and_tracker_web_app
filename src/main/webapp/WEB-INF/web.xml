<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

 <display-name>Car Service and Maintenance Tracker</display-name>

 <!-- ✅ Default landing page -->
 <welcome-file-list>
  <welcome-file>home.jsp</welcome-file>
 </welcome-file-list>

 <!-- ✅ Register Servlet -->
 <servlet>
  <servlet-name>RegisterServlet</servlet-name>
  <servlet-class>lk.sliit.carservicemanagementgp99.projectname.servlet.RegisterServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>RegisterServlet</servlet-name>
  <url-pattern>/register</url-pattern>
 </servlet-mapping>

 <!-- ✅ Login Servlet -->
 <servlet>
  <servlet-name>LoginServlet</servlet-name>
  <servlet-class>lk.sliit.carservicemanagementgp99.projectname.servlet.LoginServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>LoginServlet</servlet-name>
  <url-pattern>/login</url-pattern>
 </servlet-mapping>

 <!-- ✅ Dashboard Redirect Servlet -->
 <servlet>
  <servlet-name>DashboardRedirectServlet</servlet-name>
  <servlet-class>lk.sliit.carservicemanagementgp99.projectname.servlet.DashboardRedirectServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>DashboardRedirectServlet</servlet-name>
  <url-pattern>/dashboard</url-pattern>
 </servlet-mapping>

 <!-- ✅ Logout Servlet -->
 <servlet>
  <servlet-name>LogoutServlet</servlet-name>
  <servlet-class>lk.sliit.carservicemanagementgp99.projectname.servlet.LogoutServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>LogoutServlet</servlet-name>
  <url-pattern>/logout</url-pattern>
 </servlet-mapping>

 <!-- ✅ User CRUD Servlet -->
 <servlet>
  <servlet-name>UserCRUDServlet</servlet-name>
  <servlet-class>lk.sliit.carservicemanagementgp99.projectname.servlet.UserCRUDServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>UserCRUDServlet</servlet-name>
  <url-pattern>/usercrud</url-pattern>
 </servlet-mapping>



 <!-- ✅ Global Error Pages -->
 <error-page>
  <error-code>404</error-code>
  <location>/error.jsp</location>
 </error-page>

 <error-page>
  <error-code>500</error-code>
  <location>/error.jsp</location>
 </error-page>

</web-app>
